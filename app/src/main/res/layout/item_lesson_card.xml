<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LessonCardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_lesson_title"
            style="@style/LessonTitleStyle" />

        <TextView
            android:id="@+id/tv_lesson_topic"
            style="@style/LessonTopicStyle" />

        <TextView
            android:id="@+id/tv_lesson_content"
            style="@style/LessonContentStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_lesson_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/LessonFooterStyle" />

            <TextView
                android:id="@+id/tv_lesson_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LessonFooterStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>